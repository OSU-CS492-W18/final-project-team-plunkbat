<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_player_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="@string/username" />

        <TextView
            android:id="@+id/tv_player"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shroud" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_game_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="SOLO/DUO/SQUAD" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="127dp"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/ll_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Space
            android:layout_width="141dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_score_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/score" />

            <TextView
                android:id="@+id/tv_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.43" />
        </LinearLayout>

        <Space
            android:layout_width="141dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_win_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wins" />

            <TextView
                android:id="@+id/tv_wins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100" />

        </LinearLayout>

        <Space
            android:layout_width="141dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_win_percent_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/win_percent" />

            <TextView
                android:id="@+id/tv_win_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100%" />
        </LinearLayout>

        <Space
            android:layout_width="141dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="127dp"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/ll_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Space
            android:layout_width="141dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_time_played_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/time_played" />

            <TextView
                android:id="@+id/tv_time_played"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20h, 10s" />
        </LinearLayout>

        <Space
            android:layout_width="141dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_avg_match_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/avg_match_time" />

            <TextView
                android:id="@+id/tv_avg_match_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5m, 10s" />

        </LinearLayout>

        <Space
            android:layout_width="141dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="127dp"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/ll_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Space
            android:layout_width="141dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_kills_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/kills" />

            <TextView
                android:id="@+id/tv_kills"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1025" />
        </LinearLayout>

        <Space
            android:layout_width="141dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_kill_death_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/kill_death" />

            <TextView
                android:id="@+id/tv_kill_death"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.34" />

        </LinearLayout>

        <Space
            android:layout_width="141dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_kpmin_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/kills_per_min" />

            <TextView
                android:id="@+id/tv_kpmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3.25" />
        </LinearLayout>

        <Space
            android:layout_width="141dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_kpmatch_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/kills_per_match" />

            <TextView
                android:id="@+id/tv_kpmatch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12.01" />
        </LinearLayout>

        <Space
            android:layout_width="141dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="127dp"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/ll_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Space
            android:layout_width="141dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_score_per_match_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/score_per_match" />

            <TextView
                android:id="@+id/tv_score_per_match"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5,210" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

        </LinearLayout>

        <Space
            android:layout_width="141dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

        </LinearLayout>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="127dp"
        android:layout_weight="1" />

</LinearLayout>